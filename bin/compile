#!/usr/bin/env bash

BUILD_DIR=$1
CACHE_DIR=$2

echo "-----> Installing SASS"
if [ ! -d "$PWD/.gem" ]; then
  mkdir $PWD/.gem
fi
gem install sass --no-rdoc --no-ri --install-dir "$PWD/.gem" | indent
export GEM_PATH=$GEM_PATH:$PWD/.gem
echo "done"

echo "-----> Installing Compass..."
gem install compass --no-rdoc --no-ri --install-dir "$PWD/.gem"
echo "done"

echo "-----> Compiling Compass"
cd $BUILD_DIR/assets
$BUILD_DIR/.gem/bin/compass compile sass/v1/index.scss
echo "done"
